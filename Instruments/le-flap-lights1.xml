<PropertyList>

 <name>LE FLAPS light</name>
 <w-base>64</w-base>
 <h-base>64</h-base>

 <layers>

  <layer>      
   <name>LE FLAPS off</name>   
   <condition>    
    <less-than>
     <property>/surface-positions/flap-pos-norm</property>
     <value>0.125</value>
    </less-than>    
   </condition> 
   <texture>
    <path>Aircraft/737-500/Instruments/Textures/gear-lights.rgb</path>
    <x1>0.75</x1>
    <y1>0.75</y1>
    <x2>1.0</x2>
    <y2>1.0</y2>
   </texture>
  </layer>

  <layer>      
   <name>LE FLAPS on</name>   
   <condition>   
    <greater-than>
     <property>/surface-positions/flap-pos-norm</property>
     <value>0.12499</value>
    </greater-than>    
   </condition>   
   <texture>
    <path>Aircraft/737-500/Instruments/Textures/gear-lights.rgb</path>
    <x1>0.75</x1>
    <y1>0.5</y1>
    <x2>1.0</x2>
    <y2>0.75</y2>
   </texture>
  </layer>

 </layers>

</PropertyList>
   