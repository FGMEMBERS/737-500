<PropertyList>

 <name>LE FLAP TRANSIT light</name>
 <w-base>64</w-base>
 <h-base>64</h-base>

 <layers>

  <layer>      
   <name>LE FLAP TRANSIT on</name>   
   <condition>
    <and>
     <less-than>
      <property>/surface-positions/flap-pos-norm</property>
      <value>0.125</value>
     </less-than>  
     <greater-than>
      <property>/surface-positions/flap-pos-norm</property>
      <value>0</value>
     </greater-than>
    </and>
  </condition> 
  <texture>
   <path>Aircraft/737-500/Instruments/Textures/gear-lights.rgb</path>
   <x1>0.5</x1>
   <y1>0.5</y1>
   <x2>0.75</x2>
   <y2>0.75</y2>
  </texture>
 </layer>

 <layer>      
  <name>LE FLAP TRANSIT off</name>   
  <condition>
   <or>
    <equals>
     <property>/surface-positions/flap-pos-norm</property>
     <value>0</value>
    </equals>
    <greater-than>
     <property>/surface-positions/flap-pos-norm</property>
     <value>0.1249</value>
    </greater-than>
   </or>
  </condition>   
  <texture>
   <path>Aircraft/737-500/Instruments/Textures/gear-lights.rgb</path>
   <x1>0.5</x1>
   <y1>0.75</y1>
   <x2>0.75</x2>
   <y2>1.0</y2>
  </texture>
 </layer>

 </layers>

</PropertyList>
   