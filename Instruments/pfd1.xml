<PropertyList>
 <name>PFD1</name>
 <w-base>270</w-base>
 <h-base>270</h-base>

   <params>
  <nav-gs-needle-deflection>/instrumentation/nav[0]/gs-needle-deflection</nav-gs-needle-deflection>
  <hsi-has-gs-needle>/sim/instrument-options/hsi[0]/has-gs-needle</hsi-has-gs-needle>
 </params>

 <layers>

  <layer>
      <name>background</name>
       <texture>
	<path>Aircraft/737-500/Instruments/Textures/pfd-background.rgb</path>
	<x1>0.0</x1>
	<y1>0.0</y1>
	<x2>1.0</x2>
	<y2>1.0</y2>
      </texture>
      <w>250</w>
      <h>250</h>
     </layer>

     <layer>
      <name>compass rose</name>
       <texture>
	<path>Aircraft/737-500/Instruments/Textures/compass-face.rgb</path>
	<x1>0.0</x1>
	<y1>0.0</y1>
	<x2>1.0</x2>
	<y2>1.0</y2>
      </texture>
      <w>125</w>
      <h>125</h>
     <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-40</offset>
     </transformation>
     <transformation>       
      <type>y-shift</type>
      <offset>0</offset>
     </transformation>      
      <transformation>
      <type>rotation</type>
      <property>/orientation/heading-magnetic-deg</property>
      <min>-360.0</min>
      <max>360.0</max>
      <scale>-1.0</scale>
      <offset>-10</offset> 
      </transformation>
    </transformations>
   </layer>

     <layer>
      <name>heading-bug</name>
       <texture>
	<path>Aircraft/737-500/Instruments/Textures/asi-needle.rgb</path>
	<x1>0.75</x1>
	<y1>0.0</y1>
	<x2>1.0</x2>
	<y2>1.0</y2>
      </texture>
      <w>25</w>
      <h>80</h>
     <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-40</offset>
     </transformation>
     <transformation>       
      <type>y-shift</type>
      <offset>0</offset>
     </transformation>             
      <transformation>
      <type>rotation</type>
      <property>/autopilot/settings/heading-bug-deg</property>
      <min>0.0</min>
      <max>360.0</max>
      <scale>1.0</scale>
      <offset>0</offset> 
      </transformation>       
      <transformation>
     <type>rotation</type>
     <property>/orientation/heading-magnetic-deg</property>
     <min>0.0</min>
     <max>360</max>
     <scale>-1.0</scale>
    </transformation>       
      <transformation>
      <type>y-shift</type>
      <offset>25</offset>
      </transformation>      
    </transformations>
   </layer>

    <layer>      
  <name>to from</name>
  <condition>
   <equals>
   <property>/instrumentation/nav/to-flag</property>
   <value>1</value>
   </equals>
  </condition>    
   <texture>
    <path>Aircraft/737-500/Instruments/Textures/to-from.rgb</path>
    <x1>0.0</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>0.5</y2>
   </texture>
    <w>20</w>
    <h>10</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-40</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>0</offset>
     </transformation>       
     <transformation>
     <type>rotation</type>
     <property>/orientation/heading-magnetic-deg</property>
     <min>0.0</min>
     <max>360</max>
     <scale>-1.0</scale>
    </transformation>  
     <transformation>
     <type>rotation</type>
     <property>/instrumentation/nav[0]/radials/selected-deg</property>
     <min>0.0</min>
     <max>360.0</max>
     <scale>1.0</scale>     
    </transformation>
     <transformation>
     <type>y-shift</type>
     <offset>10</offset>
     </transformation>
    </transformations>   
  </layer> 

   <layer>      
  <name>to from</name>
  <condition>
   <equals>
   <property>/instrumentation/nav/from-flag</property>
   <value>1</value>
   </equals>
  </condition>  
   <texture>
    <path>Aircraft/737-500/Instruments/Textures/to-from.rgb</path>
    <x1>0.0</x1>
    <y1>0.5</y1>
    <x2>1.0</x2>
    <y2>1.0</y2>
   </texture>
    <w>20</w>
    <h>10</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-40</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>0</offset>
     </transformation>       
     <transformation>
     <type>rotation</type>
     <property>/orientation/heading-magnetic-deg</property>
     <min>0.0</min>
     <max>360</max>
     <scale>-1.0</scale>
    </transformation>
     <transformation>
     <type>rotation</type>
     <property>/instrumentation/nav[0]/radials/selected-deg</property>
     <min>0.0</min>
     <max>360.0</max>
     <scale>1.0</scale>      
    </transformation>
     <transformation>
     <type>y-shift</type>
     <offset>-12</offset>
     </transformation>    
    </transformations>   
  </layer>   

  <layer>
  <name>glidescope needle</name>
  <condition>
   <equals>
   <property alias="../../../../../params/hsi-has-gs-needle"/>
   <value>1</value>
   </equals>
  </condition>
  <texture>
   <path>Aircraft/Instruments/Textures/misc-1.rgb</path>
   <x1>0.439</x1>
   <y1>0.5</y1>
   <x2>0.4575</x2>
   <y2>1.0</y2>
  </texture>
  <w>6</w>
  <h>64</h>
  <transformations>
   <transformation>
      <type>x-shift</type>
      <offset>-40</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>0</offset>
     </transformation>      
   <transformation>
    <type>y-shift</type>
    <property alias="../../../../../params/nav-gs-needle-deflection"/>
    <min>-3.5</min>
    <max>3.5</max>
    <scale>7.0</scale>
   </transformation>
   <transformation>
    <type>rotation</type>
    <offset>90</offset>
   </transformation>
  </transformations>
  </layer>

   <layer>
    <name>Nav1</name>
    <texture>
     <path>Aircraft/Instruments/Textures/hsi.rgb</path>
     <x1>0.0</x1>
     <y1>0.75</y1>
     <x2>0.25</x2>
     <y2>1.0</y2>
    </texture>
    <w>72</w>
    <h>72</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-40</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>0</offset>
     </transformation>      
     <transformation>
     <type>rotation</type>
     <property>/orientation/heading-magnetic-deg</property>
     <min>0.0</min>
     <max>360</max>
     <scale>-1.0</scale>
    </transformation>
    <transformation>
     <type>rotation</type>
     <property>/instrumentation/nav[0]/radials/selected-deg</property>
     <min>0.0</min>
     <max>360.0</max>
     <scale>1.0</scale>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Nav1_deviation</name>
   <texture>
   <path>Aircraft/Instruments/Textures/hsi.rgb</path>
   <x1>0.25</x1>
   <y1>0.75</y1>
   <x2>0.5</x2>
   <y2>1.0</y2>
   </texture>
   <w>72</w>
   <h>72</h>
   <transformations>
    <transformation>
      <type>x-shift</type>
      <offset>-40</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>0</offset>
     </transformation>       
    <transformation>
    <type>rotation</type>
    <property>/orientation/heading-magnetic-deg</property>
    <min>0.0</min>
    <max>360</max>
    <scale>-1.0</scale>
   </transformation>
    <transformation>
    <type>rotation</type>
    <property>/instrumentation/nav[0]/radials/selected-deg</property>
    <min>0.0</min>
    <max>360</max>
    <scale>1.0</scale>
   </transformation>
   <transformation>
    <type>x-shift</type>
    <property>/instrumentation/nav[0]/heading-needle-deflection</property>
    <min>-10.0</min>
    <max>10.0</max>
    <scale>3.2</scale>
   </transformation>
  </transformations>
 </layer>


  <layer>
   <name>Plane</name>
   <texture>
    <path>Aircraft/Instruments/Textures/misc-1.rgb</path>
    <x1>0.5</x1>
    <y1>0.734375</y1>
    <x2>0.59375</x2>
    <y2>0.828125</y2>
   </texture>
   <w>25</w>
   <h>25</h>
   <transformations>
    <transformation>
      <type>x-shift</type>
      <offset>-40</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>0</offset>
     </transformation>      
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>  
  
   <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/737-500/Instruments/Textures/asi-face.rgb</path>
    <x1>0.0</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>1.0</y2>     
   </texture>
   <w>100</w>
   <h>100</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>60</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>50</offset>
     </transformation>
    </transformations>
  </layer>

   <layer>
    <name>needle</name>
   <texture>
    <path>Aircraft/737-500/Instruments/Textures/asi-needle.rgb</path>
    <x1>0.45</x1>
    <y1>0.0</y1>
    <x2>0.55</x2>
    <y2>1.0</y2>
   </texture>
   <w>7.0</w>
   <h>34.0</h>
   <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>60</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>50</offset>
     </transformation>
     <transformation>
      <type>rotation</type>
      <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
      <min>0.0</min>
      <max>480.0</max>
      <scale>1.0</scale>
       <interpolation>
       <entry><ind>  0</ind><dep>  0</dep></entry>
       <entry><ind> 80</ind><dep> 25</dep></entry>
       <entry><ind>100</ind><dep> 52</dep></entry>
       <entry><ind>120</ind><dep> 74</dep></entry>
       <entry><ind>140</ind><dep>100</dep></entry>
       <entry><ind>160</ind><dep>126</dep></entry>
       <entry><ind>180</ind><dep>154</dep></entry>
       <entry><ind>200</ind><dep>178</dep></entry>
       <entry><ind>220</ind><dep>204</dep></entry>
       <entry><ind>240</ind><dep>226</dep></entry>
       <entry><ind>250</ind><dep>242</dep></entry>
       <entry><ind>300</ind><dep>268</dep></entry>
       <entry><ind>350</ind><dep>288</dep></entry>
       <entry><ind>400</ind><dep>308</dep></entry>
       <entry><ind>450</ind><dep>328</dep></entry>
       <entry><ind>480</ind><dep>336</dep></entry>
       </interpolation>
     </transformation>
    <transformation>
    <type>y-shift</type>
    <offset>16</offset>
    </transformation>
   </transformations>
  </layer>
  
   <layer>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
      <format>%6.0f</format>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>40</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>26</offset>
     </transformation>
    </transformations>
   </layer> 

   <layer>    
    <name>heading</name>
    <type>text</type>
    <font>led</font>
    <point-size>6</point-size>
    <color>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
    </color>
    <chunks>
     <chunk>
      <type>number-value</type>
      <property>/orientation/heading-magnetic-deg[0]</property>
      <format>%6.0f</format>
     </chunk>
    </chunks>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset>-60</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>70</offset>
     </transformation>
    </transformations>
   </layer>    
  
  <layer>
  <name>background</name>
   <texture>
    <path>Aircraft/737-500/Instruments/Textures/compass-face.rgb</path>
    <x1>0.0</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>1.0</y2>
    <offset>-60</offset>
   </texture>
   <w>90</w>
   <h>90</h>   
   <transformations>
    <transformation>
      <type>x-shift</type>
      <offset>60</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-50</offset>
    </transformation>     
    <transformation>
     <type>rotation</type>
     <property>/orientation/heading-deg[0]</property>
     <min>-360.0</min>
     <max>360.0</max>
     <scale>-1</scale>
    </transformation>      
   </transformations> 
  </layer>

  <layer>
    <name>needle VOR1</name>
   <texture>
    <path>Aircraft/737-500/Instruments/Textures/asi-needle.rgb</path>
    <x1>0.18</x1>
    <y1>0.0</y1>
    <x2>0.30</x2>
    <y2>1.0</y2>     
   </texture>
   <w>14.0</w>
   <h>80.0</h>
    <transformations>
     <transformation>
      <type>x-shift</type>
      <offset> 60</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-50</offset>
     </transformation>
    <transformation>
     <type>rotation</type>
     <property>/instrumentation/nav[0]/radials/actual-deg</property>
      <min>0</min>
      <max>360</max>
     <scale>1.0</scale>
     <offset>180</offset> 
    </transformation>
    <transformation>
     <type>rotation</type>
     <property>/orientation/heading-magnetic-deg</property>
     <scale>-1.0</scale>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
    <name>needle VOR2</name>
   <texture>
    <path>Aircraft/737-500/Instruments/Textures/asi-needle.rgb</path>
    <x1>0.66</x1>
    <y1>0.0</y1>
    <x2>0.75</x2>
    <y2>1.0</y2>     
   </texture>
   <w>14.0</w>
   <h>80.0</h>
   <transformations>
     <transformation>
      <type>x-shift</type>
      <offset> 60</offset>
     </transformation>
     <transformation>
      <type>y-shift</type>
      <offset>-50</offset>
     </transformation>
    <transformation>
     <type>rotation</type>
     <property>/instrumentation/nav[1]/radials/actual-deg</property>
      <min>0</min>
      <max>360</max>
     <scale>1.0</scale>
     <offset>180</offset> 
    </transformation>
    <transformation>
     <type>rotation</type>
     <property>/orientation/heading-magnetic-deg</property>
     <scale>-1.0</scale>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
    </transformation>
   </transformations>
   </layer> 
   <layer>
   <name>ladder</name>
   <type>texture</type>
   <texture>
    <path>Aircraft/737-500/Instruments/Textures/mfd-bezel.rgb</path>
    <x1>0.0</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>1.0</y2>
   </texture>
   <w>256</w>
   <h>256</h>
  </layer>
 </layers>   
</PropertyList>
